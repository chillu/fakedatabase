{
	"name": "chillu/fakedatabase",
	"description": "Simple 'database' storage adapter which persists into a JSON file",
	"license": "BSD-2-Clause",
	"keywords": ["json","testing","database"],
	"authors": [
		{
			"name" : "Ingo Schommer",
			"email" : "me@chillu.com",
			"role" : "Developer"
		},
		{
			"name": "madmatt",
			"email": "signups+github@madman.net.nz"
		}
	],
	"require": {
		"php": "^7.2",
		"ext-json": "*"
	},
	"require-dev": {
		"phpunit/phpunit": "^8",
		"squizlabs/php_codesniffer": "^3.4"
	},
	"support": {
		"source": "https://github.com/chillu/fakedatabase",
		"issues": "https://github.com/chillu/fakedatabase/issues",
		"docs" : "https://github.com/chillu/fakedatabase"
	},
	"autoload": {
        "psr-4": { 
			"Chillu\\FakeDatabase\\": "src/"
		}
    },
	"autoload-dev": {
		"psr-4": {
			"Chillu\\FakeDatabase\\Tests\\": "tests/",
			"Chillu\\FakeDatabase\\Tests\\Fixtures\\": "tests/fixtures/"
		}
	},
	"extra": {
		"branch-alias": {
			"dev-master": "2.x"
		}
	}
}
